{
  "name": "fpack-app",
  "private": true,
  "version": "0.8.0",
  "description": "Application desktop F-Pack pour configurer et g√©rer vos packs",
  "author": "FANUC",
  "type": "module",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "electron": "electron .",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron\"",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@vueuse/core": "^13.5.0",
    "tree-kill": "^1.2.2",
    "vue": "^3.5.17",
    "vue-multiselect": "^3.3.1",
    "vue-router": "^4.5.1",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/tsconfig": "^0.7.0",
    "concurrently": "^9.2.0",
    "electron": "^37.1.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.0",
    "vue-tsc": "^2.2.10",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.fpack.app",
    "productName": "F-Pack App",
    "nsis": {
      "include": "build/installer.nsh"
    },
    "files": [
      "dist/",
      "electron-main.js",
      "preload.js",
      "package.json",
      "../backend/dist/backend.exe",
      "../backend/.env",
      "build/msodbcsql.msi",
      "build/postInstall.bat"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/backend.exe",
        "to": "backend.exe"
      },
      {
        "from": "../backend/.env",
        "to": ".env"
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
